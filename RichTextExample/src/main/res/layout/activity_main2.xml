<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.square1.richtext.io.square1.richtext.sample.Main2Activity">
    <io.square1.richtextlib.ui.RichContentView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:richQuoteDrawable="@drawable/quote2"
        android:id="@+id/content"
        app:richQuoteBackgroundColor="@android:color/transparent"
        app:richQuoteFontFamily="fonts/Velino_Text-Bold.otf"
        android:textSize="20dip"
        app:richHeaderTextColor="#ff0000"
        android:textColor="#dd99dd"
        android:textColorLink="#995500"
        app:richQuoteTextSize="45dip"
        app:richQuoteTextColor="#334400"
        android:background="#d3d3d3"
        android:paddingLeft="25dip"
        android:paddingRight="25dip"
        android:paddingBottom="0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </io.square1.richtextlib.ui.RichContentView>
</RelativeLayout>
